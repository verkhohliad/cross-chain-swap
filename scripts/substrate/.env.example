# Contracts RPC endpoint (must be a contracts-enabled parachain)
# Example: Rococo Contracts
APP_WS=wss://rococo-contracts-rpc.polkadot.io

# Factory contract address (hex H160 or SS58 as accepted by api-contract on this chain)
APP_FACTORY=0xa2bdef91b96a031897848e75210eecb1f394bbff

# Signer credentials (use ONE of the following)
# Option A: SURI (mnemonic)
APP_SURI=

# Option B: Polkadot.js JSON keystore (uncomment if using JSON)
# APP_JSON=./account.json
# APP_PASSWORD=your-password

# Default parameters for create-native (can be overridden by CLI flags)
# Beneficiary H160 (20 bytes)
APP_BENEFICIARY=0x1111111111111111111111111111111111111111
# Hashed secret (32 bytes hex, keccak256(secret))
APP_HASH=0x0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef
# Expiry (u64 blocks)
APP_EXPIRY=100000
# Resolver deposit (U256 decimal)
APP_DEPOSIT=1000000000000
# Locked amount (U256 decimal)
APP_LOCKED=5000000000000
# Salt Option: None or Some(0x...64hex)
APP_SALT=None

# Optional: escrow address for get-info/claim/refund defaults
# APP_ESCROW=0x0000000000000000000000000000000000000000
